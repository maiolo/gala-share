<h2> Edit your product </h2>
<%= simple_form_for [ @product ] do |f| %>
  <%= f.input :name%>
  <%= f.input :price%>
  <%= f.input :size%>
  <%= f.input :description%>
  <%= f.input :deal_type, collection: ['Buy', 'Rent']%>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
  <%end%>